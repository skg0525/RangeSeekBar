<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    >
<!-- time range 0 - 6 hours with increments 30 mins (0.5hours) so total of 12 steps (mark number) -->
    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        app:rsb_min="0"
        app:rsb_max="6"
        app:rsb_mode="single"
        app:rsb_progress_height="6dp"
        app:rsb_progress_radius="8dp"
        app:rsb_min_allowed_enabled="enable"
        app:rsb_min_allowed="1"
        app:rsb_progress_default_color="@color/rsbColorThumbPressed"
        app:rsb_progress_color="@color/colorPrimary"
        app:rsb_tick_mark_text_array="@array/wordsArray1"
        app:rsb_tick_mark_text_margin="20dp"
        app:rsb_tick_mark_number="12"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_gravity="center"
        app:rsb_tick_mark_text_color="@color/colorPrimaryDark"
        app:rsb_indicator_height="20dp"
        app:rsb_thumb_size="25dp"
        app:rsb_thumb_drawable="@drawable/thumb_yellow"
        app:rsb_indicator_show_mode="alwaysHide"
        app:rsb_indicator_padding_left="10dp"
        app:rsb_indicator_padding_right="10dp"
        />

    <!-- time range 6pm - 8am hours with increments 30 mins (0.5hours) so total of 28 steps (mark number) -->

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        app:rsb_min="0"
        app:rsb_max="14"
        app:rsb_mode="range"
        app:rsb_progress_height="6dp"
        app:rsb_progress_radius="8dp"
        app:rsb_progress_default_color="@color/colorPrimary"
        app:rsb_progress_color="@color/rsbColorThumbPressed"
        app:rsb_tick_mark_text_array="@array/wordsArray2"
        app:rsb_tick_mark_text_margin="30dp"
        app:rsb_tick_mark_number="28"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_gravity="center"
        app:rsb_tick_mark_text_color="@android:color/white"
        app:rsb_indicator_background_color="@android:color/white"
        app:rsb_indicator_text_color="@color/colorPrimary"
        app:rsb_indicator_height="20dp"
        app:rsb_thumb_size="22dp"
        app:rsb_thumb_drawable="@drawable/thumb_yellow"
        app:rsb_indicator_show_mode="alwaysShow"
        app:rsb_range_interval="0.5"
        app:rsb_indicator_padding_left="10dp"
        app:rsb_indicator_padding_right="10dp"
        />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        app:rsb_mode="range"
        app:rsb_progress_height="10dp"
        app:rsb_progress_radius="8dp"
        app:rsb_progress_default_color="@color/rsbColorThumbPressed"
        app:rsb_progress_color="@color/colorPrimary"
        app:rsb_tick_mark_text_array="@array/wordsArray"
        app:rsb_tick_mark_text_margin="17dp"
        app:rsb_tick_mark_number="4"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_gravity="center"
        app:rsb_tick_mark_text_color="@color/colorProgress"
        app:rsb_indicator_height="20dp"
        app:rsb_thumb_size="22dp"
        app:rsb_thumb_drawable="@drawable/thumb_yellow"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_range_interval="25"
        app:rsb_indicator_padding_left="10dp"
        app:rsb_indicator_padding_right="10dp"
        />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rsb_mode="single"
        app:rsb_thumb_drawable="@drawable/thumb_activated"
        app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated"
        />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:rsb_mode="single"
        app:rsb_tick_mark_mode="number"
        app:rsb_indicator_text_size="12sp"
        app:rsb_tick_mark_text_array="@array/markArray"
        app:rsb_progress_color="@color/colorAccent"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_thumb_drawable="@drawable/seekbar_thumb"
        app:rsb_indicator_height="20dp"
        app:rsb_indicator_width="80dp"
        app:rsb_indicator_show_mode="alwaysShow"
        app:rsb_indicator_radius="8dp"
        />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:rsb_indicator_drawable="@drawable/progress_hint_bg"
        app:rsb_indicator_height="40dp"
        app:rsb_indicator_padding_bottom="10dp"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_indicator_width="40dp"
        app:rsb_max="1"
        app:rsb_min="-1"
        app:rsb_mode="range"
        app:rsb_progress_color="@color/colorAccent"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_progress_height="4dp"
        app:rsb_thumb_drawable="@drawable/thumb_activated"
        app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated"
        app:rsb_thumb_scale_ratio="1.2"
        app:rsb_thumb_size="20dp"
        app:rsb_tick_mark_mode="number"
        app:rsb_tick_mark_text_array="@array/markArray2"
        app:rsb_tick_mark_text_margin="17dp" />
    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:rsb_min="-100"
        app:rsb_max="100"
        app:rsb_mode="range"
        app:rsb_range_interval="60"
        app:rsb_progress_height="2dp"
        app:rsb_progress_color="#a6c1ee"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_text_margin="17dp"
        app:rsb_tick_mark_text_size="16sp"
        app:rsb_tick_mark_text_array="@array/negativeMarkArray"
        app:rsb_indicator_height="25dp"
        app:rsb_indicator_width="80dp"
        app:rsb_indicator_background_color="#a6c1ee"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_thumb_size="20dp"
        app:rsb_indicator_margin="3dp"
        app:rsb_thumb_scale_ratio="1.5"
        app:rsb_thumb_drawable="@drawable/thumb_gradient"
        />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rsb_mode="single"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_indicator_height="25dp"
        app:rsb_indicator_width="40dp"
        app:rsb_indicator_margin="2dp"
        app:rsb_thumb_size="22dp"
        app:rsb_thumb_drawable="@drawable/thumb_activated"
        app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated"
        />

</LinearLayout>
